        <div class="mb-3">
            <label for="title" class="form-label">Book Title</label>
            <input class="form-control" name="title" placeholder="{{book.title}}" type="text" value="{{title}}">
        </div>
        <div class="mb-3">
             <label for="title" class="form-label">Book Author</label>
